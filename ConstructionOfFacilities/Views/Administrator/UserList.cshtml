@model IEnumerable<ConstructionOfFacilities.Models.ApplicationUser>

@{
    ViewData["Title"] = "Управление пользователями";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Список пользователей</h2>

<p>
    <a asp-controller="Account" asp-action="Register">Создать нового</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Roles" asp-route-userid="@item.Id">Права доступа</a>
                    <a class="btn btn-sm btn-primary" asp-action="ResetUserPassword" asp-route-id="@item.Id">Сбросить пароль</a> |
                    <a class="btn btn-sm btn-danger" asp-action="DeleteUser" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>